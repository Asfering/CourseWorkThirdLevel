@model IEnumerable<CourseWorkThirdLevel.User>
@{
    ViewBag.Title = "Главная";
}

@using (Html.BeginForm("AllDocuments", "Document", FormMethod.Post))
{
    <div style="height:100%">
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center" style="height:max-content">
                <div class="col-md-12">
                    <div class="search">
                        <i class="fa fa-search"></i> <input type="text" class="f-control" placeholder="Найти документ..." name="FindDoc">

                        <button class="btn btn-primary" type="submit" name="action" value="Search">Поиск</button>
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-center align-items-center" style="margin-top:15px; margin-bottom:250px">
                <div class="col-md-2">
                    <i class="fa fa-search"></i> <input type="text" onfocus="(this.type='date')" class="f-control" placeholder="Дата от" name="DateStart"  min="1900-01-01" max="2030-12-31">
                </div>
                <div class="col-md-2">
                    <i class="fa fa-search"></i> <input type="text" onfocus="(this.type='date')" class="f-control" placeholder="Дата до" name="DateEnd" min="1900-01-01" max="2030-12-31">
                </div>
                <div class="col-md-4">
                    @Html.CheckBox("checkBoxActual", false) <span>Только актуальные</span>
                    @*<input class="form-check-input" type="checkbox" id="checkBoxActual" name="checkBoxActual" />
                    <label class="form-check-label" for="checkBoxActual" style="color:grey">Только актуальные</label>*@
                </div>
            </div>
        </div>
    </div>
}